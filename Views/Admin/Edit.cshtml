@model Product
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form action="/Admin" method="post">
	<table>
		<tr>
			<td align="right"><label for="name">Product name:</label></td>
			<td><input type="text" name="name" placeholder="@Model.Name" /></td>
		</tr>
		<tr>
			<td align="right"><label for="category">Category:</label></td>
			<td><input type="text" name="category" placeholder="@Model.Category" /></td>
		</tr>
		<tr>
			<td align="right"><label for="description">Description:</label></td>
			<td><input type="text" name="description" placeholder="@Model.Description" /></td>
		</tr>
		<tr>
			<td align="right"><label for="price">Price:</label></td>
			<td><input type="text" name="price" placeholder="@Model.Price" /></td>
		</tr>
	</table>
	<input type="hidden" name="productID" value="@Model.ID" />
	<input type="reset" />
	<br /><br />
	<input type="submit" name="edit" value="Save" />
	<input type="submit" name="edit" value="Cancel" />
</form>